    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "description": "Endpoint to register a new user",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "UserId": {
                          "type": "number",
                          "example": 1
                        },
                        "UserEmail": {
                          "type": "string",
                          "example": "example@example.com"
                        },
                        "UserName": {
                          "type": "string",
                          "example": "John Doe"
                        },
                        "UserPhone": {
                          "type": "string",
                          "example": "0552038398"
                        },
                        "UserRole": {
                          "type": "string",
                          "example": "USER"
                        }
                      }
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyS..."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User already exists"
                    },
                    "errorCode": {
                      "type": "number",
                      "example": "1002"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable entity",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid email"
                    },
                    "errorCode": {
                      "type": "number",
                      "example": "1006"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Internal server error"
                    },
                    "errorCode": {
                      "type": "number",
                      "example": "1007"
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "UserEmail": {
                    "type": "string",
                    "example": "example@example.com"
                  },
                  "UserPassword": {
                    "type": "string",
                    "example": "password123"
                  },
                  "UserName": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "UserPhone": {
                    "type": "string",
                    "example": "0552038398"
                  }
                },
                "required": [
                  "UserEmail",
                  "UserPassword",
                  "UserName",
                  "UserPhone"
                ]
              }
            }
          }
        }
      }
    },
