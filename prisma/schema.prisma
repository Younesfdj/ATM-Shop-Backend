generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model testtable{
  id Int @id @default(autoincrement())
  testCol Int
}

model Product {
  ProductId Int @id @default(autoincrement())
  ProductSKU String @unique
  ProductName String
  ProductPrice Float
  ProductQuantity Int @default(1)
  ProductCategoryId Int 
  ProductDesc String
  ProductImagePath String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Category Category @relation(fields: [ProductCategoryId], references: [CategoryId])
  OrderDetail OrderDetail[]
}

model Category{
  CategoryId Int @id @default(autoincrement())
  CategoryName String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Products Product[]
}

model Order{
  OrderId Int @id @default(autoincrement())
  OrderUserId Int
  OrderAmount Float 
  OrderPhone String
  OrderEmail String 
  OrderDate DateTime @default(now()) 
  OrderCity String 
  OrderAdress String
  OrderStatus String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 

  User User @relation(fields: [OrderUserId], references: [UserId])
  OrderDetail OrderDetail[]
}

model OrderDetail {
  DetailId Int @id @default(autoincrement())
  DetailOrderId Int
  DetailProductId Int
  DetailQuantity Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Order Order @relation(fields: [DetailOrderId], references: [OrderId])
  Product Product @relation(fields: [DetailProductId], references: [ProductId])
}

model User{
  UserId Int @id @default(autoincrement())
  UserName String
  UserEmail String @unique
  UserPassword String
  UserPhone String
  UserRole Role @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  Orders Order[]
}

enum Role {
  USER
  ADMIN
}